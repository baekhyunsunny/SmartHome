<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:background="@drawable/main_back" >


 <RelativeLayout
     android:layout_marginTop="5dp"
     android:id="@+id/regist_layout1"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:gravity="center">
  <EditText
     android:id="@+id/regist_edittext1" 
     android:layout_width="fill_parent"
     android:layout_height="70dp"
     android:textColor="#000000"
      android:background="@drawable/login_border_normal"
     android:hint="用户名：\n请输入您要注册的用户名。 "   /> 
  <EditText
       
     android:id="@+id/regist_edittext2" 
     android:layout_below="@id/regist_edittext1"
     android:layout_marginTop="10dp"
     android:layout_width="fill_parent"
     android:layout_height="70dp"
     android:textColor="#000000"
     android:password="true"
     android:background="@drawable/login_border_normal"
     android:hint="密码：\n6-20位数字或字母。 " 
       /> 
  <EditText 
     android:id="@+id/regist_edittext3" 
     android:layout_below="@id/regist_edittext2"
     android:layout_marginTop="10dp"
     android:layout_width="fill_parent"
     android:layout_height="70dp"
     android:textColor="#000000"
     android:password="true"
     
     android:background="@drawable/login_border_normal"
     android:hint="确认密码：\n再次输入您的密码。 "   />   
  <EditText
     android:id="@+id/regist_edittext4"
     android:layout_below="@id/regist_edittext3"
     android:layout_width="fill_parent"
     android:layout_height="70dp"
     android:layout_marginTop="10dp"
     android:textColor="#000000"
     android:inputType="phone"
     android:background="@drawable/login_border_normal"
     android:hint="手机号：\n用于找回密码或通知。 "   /> 
  <EditText
     android:id="@+id/regist_edittext5"
     android:layout_below="@id/regist_edittext4"
     android:layout_width="fill_parent"
     android:layout_height="70dp"
     android:layout_marginTop="10dp"
     android:textColor="#000000"
     android:inputType="textEmailAddress"
     android:background="@drawable/login_border_normal"
     android:hint="邮箱：\n用于找回密码或通知。 "   />
     
 </RelativeLayout>
 
 <Button 
     android:id="@+id/regist_bt1"
     android:layout_below="@id/regist_layout1"
     android:layout_width="wrap_content"
     android:layout_height="50dp"
     android:text="注册即接受《智能安防系统使用协议》"
     android:layout_centerInParent="true"
     android:textSize="15sp"
     android:textColor="#ffffff"
     android:background="#00ffffff"/>
                                                            
 <Button
     android:id="@+id/regist_bt2"
     android:layout_below="@id/regist_bt1"
     android:layout_width="450dp"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:textColor="#ffffff"
     android:textSize="30sp"
     android:text="注册"
     android:background="@drawable/main_login_selector"
     />

</RelativeLayout>
